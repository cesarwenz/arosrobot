<?xml version="1.0"?>
<launch>

  <arg name="no_static_map" default="false"/>
  <arg name="base_global_planner" default="planner_action"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>
  
  <!-- Arguments -->
  <node name="move_base_flex" pkg="mbf_costmap_nav" type="mbf_costmap_nav" required="true" output="screen">
    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>
    <rosparam file="$(find arosrobot_navigation)/config/planner.yaml" command="load"/>
    <rosparam file="$(find arosrobot_navigation)/config/controllers.yaml" command="load"/>
    <rosparam file="$(find arosrobot_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find arosrobot_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap" />

    <!-- local costmap, needs size -->
    <rosparam file="$(find arosrobot_navigation)/config/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="10.0"/>
    <param name="local_costmap/height" value="10.0"/>

    <!-- static global costmap, static map provides size -->
    <rosparam file="$(find arosrobot_navigation)/config/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>
    <rosparam file="$(find arosrobot_navigation)/config/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
    <param name="global_costmap/width" value="50.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="50.0" if="$(arg no_static_map)"/>
    <remap from="cmd_vel" to="arosrobot_velocity_controller/cmd_vel"/>

  </node>

  <node name="move_base_legacy_relay" pkg="mbf_costmap_nav" type="move_base_legacy_relay.py"/>
</launch>
